<head>
	<%= stylesheet_link_tag "styles.css" %>
</head>

<ul>

  <a href="#"><banner>TAMU WAKE</banner></a>
  
  <a href="#"><p class="navbar navbarRightEnd"><%= link_to "Reciepts", receipts_path %></p></a>
  <a href="#"><p class="navbar"><%= link_to "Members", users_path %></p></a>
  <a href="#"><p class="navbar"> <%= link_to "Account", accounts_path %></p></a>
  <a href="#"><p class="navbar currentPage navbarLeftEnd"><%= link_to "Rides", wakeboard_sets_path %></p></a>
  
  <p class="bannerBox"></p>
  
  <h1>Sets this Week</h1>

  <table id="wakeboard_sets">
    <thead>
      <tr>
        <th>Set Date</th>
        <th>Driver</th>
        <th>Spots Available</th>
        <th>Join Set</th>
      </tr>
    </thead>
    <tbody>
      <% @wakeboard_sets.each do |set| %>
        <tr>
          <td><%= set.scheduled_date.strftime("%A at %l:%M %P") %></td>
          <td><%= set.user.firstname.capitalize + " " + set.user.lastname.capitalize.chr + "." %></td>
          <td><%= set.rider_limit - set.current_rider_count %></td>
          <td><%= link_to "Join", set %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <%= link_to "New wakeboard set", new_wakeboard_set_path %>
  
</ul>