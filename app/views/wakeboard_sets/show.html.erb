<p style="color: green"><%= notice %></p>

<head>
	<%= stylesheet_link_tag "styles.css" %>
</head>

<ul>

  <a href="#"><banner>TAMU WAKE</banner></a>
  
  <a href="#"><p class="navbar navbarRightEnd"><%= link_to "Reciepts", receipts_path %></p></a>
  <a href="#"><p class="navbar"><%= link_to "Members", users_path %></p></a>
  <a href="#"><p class="navbar">Account</p></a>
  <a href="#"><p class="navbar currentPage navbarLeftEnd"><%= link_to "Rides", wakeboard_sets_path %></p></a>
  
  <p class="bannerBox"></p>
</ul>

  <%= render @wakeboard_set %>

  <div>
    <%= button_to "Join as Dib", join_wakeboard_set_path, params: { as_dib: true }, method: :post, disabled: !@joinable %>
    <%= button_to "Join as Chib", join_wakeboard_set_path, params: { as_dib: false }, method: :post, disabled: !@joinable %>
  </div>

  <br>

  <div>
    <h2>Current Drivers</h2>
  
    <h2>Current Riders</h2>

    <h4>Dibs</h4>
    <table id="#dib-table">
      <% (@riders.select {|r| r.as_dib}).each do |rider| %>
        <tr>
          <td><%=  rider.firstname + " " + rider.lastname %></td>
        </tr>
      <% end %>
    </table>

    <h4>Chibs</h4>
    <table id="#chib-table">
      <% (@riders.select {|r| !r.as_dib}).each do |rider| %>
        <tr>
          <td><%=  rider.firstname + " " + rider.lastname %></td>
        </tr>
      <% end %>
    </table>
  </div>

  <br>

  <div>
    <%= link_to "Edit set", edit_wakeboard_set_path(@wakeboard_set) %> |
    <%= link_to "Back to set list", wakeboard_sets_path %>

    <%= button_to "Delete this set", @wakeboard_set, method: :delete %>
  </div>
