<div class="bg-white drop-shadow-lg flex flex-col mb-4 rounded w-full px-2 py-4">
  <%= link_to set, class: "w-full space-y-2 px-2" do %>
    <div class="mb-2">
      <h6><%= set.scheduled_date.strftime("%A - %b, %-d") %></h6>
    </div>

    <div class="border border-dashed w-full"></div>

    <div class="flex flex-row justify-between items-center w-full mt-2">
      <h5 class="font-semibold text-slate-900 text-lg">
        <% if set.set_drivers.length > 0 %>
          <%= set.set_drivers[0].admin.first_name + (set.set_drivers.length == 1 ? "'s set" : "") %>
          <% if set.set_drivers.length > 1 %>
            <%= "and " + set.set_drivers[1].admin.first_name + "'s set" %>
          <% end %>
        <% end %>
      </h5>

      <span>View <i class="fa-solid fa-caret-right"></i></span>
    </div>
  <% end %>

  <div class="flex flex-col mt-2">
    <div class="flex flex-row justify-between items-center rounded-lg py-2 px-4">
      <h5 class="text-gray-500">Start</h5>
      <h5 class="text-gray-900 font-semibold"><%= set.scheduled_date.strftime("%l:%M %P") %></h5>
    </div>

    <div class="flex flex-row justify-between items-center rounded-lg py-2 px-4 bg-gray-100">
      <h5 class="text-gray-500">End</h5>
      <h5 class="text-slate-800 font-semibold"><%= set.scheduled_date.strftime("%l:%M %P") %></h5>
    </div>

    <div class="flex flex-row justify-between items-center rounded-lg py-2 px-4">
      <h5 class="text-gray-500">Dib Spots</h5>
      <h5 class="text-slate-800 font-semibold"><%= set.dib_limit - set.dib_count %></h5>
    </div>
    <div class="flex flex-row justify-between items-center rounded-lg py-2 px-4 bg-gray-100">
      <h5 class="text-gray-500">Chib Spots</h5>
      <h5 class="text-slate-800 font-semibold"><%= set.chib_limit - set.chib_count %></h5>
    </div>
  </div>
</div>