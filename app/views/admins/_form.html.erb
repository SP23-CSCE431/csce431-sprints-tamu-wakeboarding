  </div>

  <div>
    <%= form.label :firstname, style: "display: block" %>
    <%= form.text_field :first_name %>
  </div>

  <div>
    <%= form.label :lastname, style: "display: block" %>
    <%= form.text_field :last_name %>
  </div>

  <div>
    <%= form.label :role_id, style: "display: block" %>
    <%= form.number_field :role_id %>
  </div>

  <div>
    <%= form.label :documents_signed, style: "display: block" %>
    <%= form.check_box :documents_signed %>
  </div>

  <div>
    <%= form.submit "Update Member" %>
  </div>
