<p style="color: green"><%= notice %></p>

<h1>Treasury</h1>

<%= link_to "New receipt", new_receipt_path %>

<div id="stage_1">
  <h2> Pending Treasurer Approval </h2>
  <% @receipts.where(stage: 1).each do |receipt| %>
      <p>
        <strong>Receipt ID:</strong>
        <%= receipt.receipt_id %>
        </br>
        <%= link_to "Show this receipt", receipt %>
      </p>

  <% end %>
</div>

<div id="stage_2">
  <h2> Approved By Treasurer, Awaiting Refund </h2>
  <% @receipts.where(stage: 2).each do |receipt| %>
      <p>
        <strong>Receipt ID:</strong>
        <%= receipt.receipt_id %>
        </br>
        <%= link_to "Show this receipt", receipt %>
      </p>

  <% end %>
</div>

<div id="stage_3">
  <h2> Refund Received </h2>
  <% @receipts.where(stage: 3).each do |receipt| %>
      <p>
        <strong>Receipt ID:</strong>
        <%= receipt.receipt_id %>
        </br>
        <%= link_to "Show this receipt", receipt %>
      </p>

  <% end %>
</div>

